                "archived_at": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "current_streak": {
                    "type": "integer"
                },
                "deleted_at": {
                    "type": "string"
                },
                "description": {
